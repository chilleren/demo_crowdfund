<div class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>edit campaign</h1>


      <%= form_for @campaign do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control'  %>

        <%= f.label :description %>
        <%= f.password_field :description, class: 'form-control'  %>

        <br />

        <%= f.submit "Update", class: "btn btn-lg btn-primary" %>

      <% end %>

    </div> 
  </div>
</div>