<div class="content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1>log in</h1>

      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <br />

        <%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
      <% end %>      
    </div> 
  </div>
</div>